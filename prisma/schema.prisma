// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  username      String        @unique
  passwordHash  String
  name          String?
  role          String        @default("user")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  shoppingLists ShoppingList[]
  sharedLists   ListShare[]
  recipes       Recipe[]
}

model ShoppingList {
  id        String       @id @default(cuid())
  name      String
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  shares    ListShare[]
  items     Item[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model ListShare {
  id            String        @id @default(cuid())
  listId        String
  list          ShoppingList  @relation(fields: [listId], references: [id], onDelete: Cascade)
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime      @default(now())

  @@unique([listId, userId])
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  icon        String?   // Emoji or icon for UI display
  sortOrder   Int       @default(0)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String    @id @default(cuid())
  name        String
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  unit        String?   // Default unit: "шт", "кг", "л", "г", etc.
  items       Item[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([categoryId, name])
}

model Item {
  id           String        @id @default(cuid())
  name         String        // Custom name or fallback if product is null
  quantity     Int           @default(1)
  purchased    Boolean       @default(false)
  listId       String
  list         ShoppingList  @relation(fields: [listId], references: [id], onDelete: Cascade)
  productId    String?       // Optional reference to Product catalog
  product      Product?      @relation(fields: [productId], references: [id], onDelete: SetNull)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Recipe {
  id           String   @id @default(cuid())
  title        String
  description  String?
  ingredients  String
  instructions String
  cookingTime  Int?
  servings     Int?
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
